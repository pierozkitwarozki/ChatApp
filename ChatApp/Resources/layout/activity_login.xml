
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    android:background="@color/colorLightGrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/view"
    android:src="@drawable/background_img"
    android:scaleType="centerCrop" />
    <TextView
        android:layout_marginTop="70dp"
        android:layout_below="@+id/mainLayout"
        android:textSize="27sp"
        android:textColor="@color/colorLightAsh"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="SIGN IN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <RelativeLayout    
        android:id="@+id/backLoginLayout"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:padding="50dp"
        android:layout_height="400dp"
        >
        <RelativeLayout       
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/roundedges"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <EditText   
                android:id="@+id/emailEditText"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorLightAsh"
                android:hint="Email"
                android:gravity="center"
                android:textColorHint="@color/colorLightAsh"
                android:textSize="12sp"
                android:background="@drawable/curvededges_EditText"
                />
            
                <EditText         
                android:id="@+id/passwordEditText"
                android:layout_below="@+id/emailEditText"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:elevation="5dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:textColor="@color/colorLightAsh"
                android:hint="Password"
                android:gravity="center"
                android:textColorHint="@color/colorLightAsh"
                android:textSize="12sp"               
                android:background="@drawable/curvededges_EditText"
                />
            <TextView
                android:id="@+id/forgotPasswordTextView"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/passwordEditText"
                android:textSize="12sp"
                android:textColor="@color/colorLightAsh"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"                
                android:text="Forgot password?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <Button
            android:id="@+id/loginButton"
            android:background="@drawable/roundbutton"
            android:textAllCaps="false"
            android:text="Login"           
            android:textColor="@color/colorLightAsh"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginBottom="12dp"
            android:elevation="5dp"
        />     
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_toLeftOf="@+id/signUpTextView"
            android:layout_marginRight="5dp"
            android:textColor="@color/colorLightAsh"
            android:text="Don't have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/signUpTextView"
            android:layout_marginRight="80dp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textColor="@color/colorGreen"
            android:text="SIGN UP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    
</RelativeLayout>