<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="0dp"
    android:layout_height="80dp">

    <RelativeLayout       
        android:background="@color/colorDarkGrey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePreviewImageView"
            android:layout_centerVertical="true"
            android:src="@drawable/add_image"
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/namePreviewTextView"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/profilePreviewImageView"
            android:textColor="@color/colorLightAsh"
            android:text="Jan Kowalski"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textPreviewTextView"
            android:layout_below="@+id/namePreviewTextView"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/profilePreviewImageView"
            android:textColor="@color/colorLightAsh"
            android:text="What about meeting ..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/datePreviewTextView"
            android:textColor="@color/colorLightAsh"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:text="08:21"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
           
</android.support.v7.widget.CardView>
