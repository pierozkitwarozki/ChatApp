<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    >
    <de.hdodenhof.circleimageview.CircleImageView    
    android:id="@+id/profileMessageCircleImageView"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:background="@drawable/add_image"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
    android:id="@+id/profileMessageNameTextView"
    android:text="John Doe"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/colorLightAsh"
    android:textSize="12sp"
    app:layout_constraintLeft_toRightOf="@+id/profileMessageCircleImageView"
    android:layout_marginLeft="8dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="4dp" />
    <TextView
    android:id="@+id/bodyMessageTextView"
    android:text="hi man, how are you?"
    android:background="@drawable/message_cloud_white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="240dp"
    android:padding="8dp"
    android:textColor="@color/colorDarkGrey"
    android:layout_marginTop="4dp"
    app:layout_constraintTop_toBottomOf="@+id/profileMessageNameTextView"
    app:layout_constraintLeft_toRightOf="@+id/profileMessageCircleImageView"
    android:layout_marginLeft="8dp" />
    <TextView
    android:id="@+id/timeMessageTextView"
    android:text="11:40"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/colorLightAsh"
    android:textSize="10sp"
    app:layout_constraintLeft_toRightOf="@+id/bodyMessageTextView"
    android:layout_marginLeft="4dp"
    app:layout_constraintBottom_toBottomOf="@+id/bodyMessageTextView" />

</android.support.constraint.ConstraintLayout>
