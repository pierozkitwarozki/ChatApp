<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="15dp"
    android:minHeight="300dp"
    android:background="@drawable/curvededges_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGreen"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Create message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Spinner     
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView1"
        android:minWidth="270dp"
        android:id="@+id/friendsSpinner"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText        
        android:layout_below="@+id/friendsSpinner"
        android:textColor="@color/colorLightAsh"
        android:imeOptions="actionDone"
        android:id="@+id/messageBodyCreateMessageEditText"
        android:layout_marginTop="50dp"
        android:inputType="textShortMessage"
        android:minHeight="30dp"
        android:gravity="center"
        android:textSize="12sp"
        android:elevation="5dp"
        android:hint="Type message..."
        android:background="@drawable/curvededges_edittext"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/messageBodyCreateMessageEditText"
        android:id="@+id/sendCreateMessageButton"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorLightAsh"
        android:text="Send"
        android:elevation="5dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/roundbutton"
        android:layout_width="150dp"
        android:layout_height="45dp"/>

</RelativeLayout>
