
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorDarkGrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarProfile"
        android:layout_width="match_parent"
        android:background = "@color/colorDarkGrey"
        android:layout_height="?android:attr/actionBarSize">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/backarrowProfileImageView"
                android:src="@drawable/backarrow"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorGreen"
                android:layout_centerInParent="true"
                android:text="Your profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    
    <ScrollView
        android:layout_marginTop="60dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout     
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileCircleImageView"
                android:src="@drawable/add_image"
                android:layout_gravity="center_horizontal"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        <TextView
        android:textSize="22sp"
        android:id="@+id/fullnameProfileTextView"
        android:textColor="@color/colorLightAsh"
        android:gravity="center_horizontal"
        android:text="Jan Kowalski"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        />
           
            <TextView   
        android:id="@+id/friendsProfileTextView"        
        android:layout_marginTop="40dp"        
        android:layout_width="match_parent"
        android:layout_height="35dp"                
        android:textColor="@color/colorLightAsh"
        android:text="Friends"
        android:gravity="center"        
        android:textSize="18sp"        
        />
            <TextView   
        android:id="@+id/invitationsProfileTextView"        
        android:layout_marginTop="10dp"        
        android:layout_width="match_parent"
        android:layout_height="35dp"                
        android:textColor="@color/colorLightAsh"
        android:text="Invitations"
        android:gravity="center"        
        android:textSize="18sp"        
        />
            <TextView   
        android:id="@+id/personalsProfileTextView"        
        android:layout_marginTop="10dp"        
        android:layout_width="match_parent"
        android:layout_height="35dp"                
        android:textColor="@color/colorLightAsh"
        android:text="Personals"
        android:gravity="center"        
        android:textSize="18sp"        
        />
            <TextView   
        android:id="@+id/deleteAccountProfileTextView"        
        android:layout_marginTop="10dp"        
        android:layout_marginBottom="70dp"        
        android:layout_width="match_parent"
        android:layout_height="35dp"                
        android:textColor="@color/colorLightAsh"
        android:text="Delete Account"
        android:gravity="center"        
        android:textSize="18sp"        
        />
    
        <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/logOutButton"
            android:background="@drawable/roundbutton"
            android:textAllCaps="false"
            android:text="Log out"           
            android:textColor="@color/colorLightAsh"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:elevation="5dp"
        />     
    </RelativeLayout>
    </LinearLayout>   
    </ScrollView>   
</LinearLayout>