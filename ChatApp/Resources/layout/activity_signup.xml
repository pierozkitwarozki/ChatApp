
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorDarkGrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background = "@color/colorDarkGrey"
        android:layout_height="?android:attr/actionBarSize">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/backarrowImageView"
                android:src="@drawable/backarrow"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorGreen"
                android:layout_centerInParent="true"
                android:text="Welcome!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/colorLightAsh"
        android:gravity="center_horizontal"
        android:text="Create New Account to meet your friends!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
    />
    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout     
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/add_image"
                android:layout_gravity="center_horizontal"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        <EditText   
        android:id="@+id/fullnameSignUpEditText"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:textColor="@color/colorLightAsh"
        android:hint="Full name"
        android:gravity="center"
        android:textColorHint="@color/colorLightAsh"
        android:textSize="12sp"
        android:background="@drawable/curvededges_EditText"
    />
    <EditText   
        android:id="@+id/emailSignUpEditText"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorLightAsh"
        android:hint="Email address"
        android:gravity="center"
        android:textColorHint="@color/colorLightAsh"
        android:textSize="12sp"
        android:background="@drawable/curvededges_EditText"
    />
    <EditText   
        android:id="@+id/usernameSignUpEditText"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:textColor="@color/colorLightAsh"
        android:hint="Username"
        android:gravity="center"
        android:textColorHint="@color/colorLightAsh"
        android:textSize="12sp"
        android:background="@drawable/curvededges_EditText"
    />
    <EditText   
        android:id="@+id/passwordSignUpEditText"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:textColor="@color/colorLightAsh"
        android:hint="Password"
        android:gravity="center"
        android:textColorHint="@color/colorLightAsh"
        android:textSize="12sp"
        android:background="@drawable/curvededges_EditText"
    />
    <EditText   
        android:id="@+id/confirmPasswordSignUpEditText"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:textColor="@color/colorLightAsh"
        android:hint="Confirm password"
        android:gravity="center"
        android:textColorHint="@color/colorLightAsh"
        android:textSize="12sp"
        android:background="@drawable/curvededges_EditText"
                                                            />  
        <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/signUpButton"
            android:background="@drawable/roundbutton"
            android:textAllCaps="false"
            android:text="Sign Up"           
            android:textColor="@color/colorLightAsh"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:elevation="5dp"
        />     
    </RelativeLayout>
    </LinearLayout>   
    </ScrollView>   
</LinearLayout>