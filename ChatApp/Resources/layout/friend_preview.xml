<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="0dp"
    android:layout_height="80dp">

    <RelativeLayout       
        android:background="@drawable/recycler_view_item_background_pressed"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePreviewFriendsImageView"
            android:layout_centerVertical="true"
            android:src="@drawable/add_image"
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/namePreviewFriendsTextView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/profilePreviewFriendsImageView"
            android:textColor="@color/colorLightAsh"
            android:text="Jan Kowalski"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>        
    </RelativeLayout>
           
</android.support.v7.widget.CardView>
