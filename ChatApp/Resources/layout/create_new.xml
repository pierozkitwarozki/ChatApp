<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="40dp"
    android:minHeight="300dp"
    android:minWidth="300dp"
    android:background="@drawable/curvededges_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGreen"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <LinearLayout
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView      
                android:background="@drawable/backarrow_pressed_effect"
            android:layout_marginLeft="13dp"            
            android:id="@+id/newMessageCreateImageView"
            android:src="@drawable/message_grey"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
            <TextView    
            android:textColor="@color/colorLightAsh"
            android:layout_marginBottom="40dp"
            android:text="New message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout     
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_marginLeft="80dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
            android:layout_gravity="center_horizontal"
            android:background="@drawable/backarrow_pressed_effect"
            android:id="@+id/newGroupCreateImageView"
            android:src="@drawable/create_group"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        
            <TextView               
            android:textColor="@color/colorLightAsh"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center_horizontal"
            android:text="New group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        
       
</RelativeLayout>
