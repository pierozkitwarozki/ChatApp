<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

<TextView
    android:id="@+id/bodyMessageTextView"
    android:text="hello, hello!"
    android:background="@drawable/message_cloud_green"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="240dp"
    android:padding="8dp"
    android:textColor="@color/colorDarkGrey"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/timeMessageTextView"
    android:text="11:40"
    android:textColor="@color/colorLightAsh"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="10sp"
    android:layout_marginRight="4dp"
    app:layout_constraintBottom_toBottomOf="@+id/bodyMessageTextView"
    app:layout_constraintRight_toLeftOf="@+id/bodyMessageTextView" />

</android.support.constraint.ConstraintLayout>